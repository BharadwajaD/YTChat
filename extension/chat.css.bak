@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;
}

:root{
    --gray-dark: #d4d6d9;
    --gray-light: #e8eaed;
}

.chat-container {
  width: max(300px, 20vw);
  height: 400px;
  margin: 1rem;
}

.chat-content {
    height: 90%;
}

.chat-content > div {
    padding: 0.25rem;
}

.user-message{
    background-color: var(--gray-light);
    font-size: 1rem;
}
.bot-message{
    background-color: var(--gray-dark);
    font-size: 1rem;
}

.chat-input > input{
    padding: 0 0.25rem;
}

button {
  cursor: pointer;
  border-radius: 50%;
  width: 25px;
  background-color: lightcyan;
}

